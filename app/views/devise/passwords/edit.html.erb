<h2>Change your password</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class =>"panel-body wrapper-lg" }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <div class="form-group"><%= f.label :password, "New password" %><br />
  	<div style="color:red;"><%=resource.errors[:password][1] if !resource.errors.nil? && !resource.errors[:password].nil?%>
	</div>
  <%= f.password_field :password, :autofocus => true, :class=>"form-control input-lg" %></div>

  <div class="form-group"><%= f.label :password_confirmation, "Confirm new password" %><br />

<div style="color:red;"><%=resource.errors[:password_confirmation][0] if !resource.errors.nil? && !resource.errors[:password_confirmation].nil?%>
	</div>
  <%= f.password_field :password_confirmation, :class=>"form-control input-lg" %></div>

  <div><%= f.submit "Change my password", :class=>"btn btn-primary" %></div>
<% end %>
 <p style="text-align:center;"><%=link_to "Back", new_user_session_path%></p>

