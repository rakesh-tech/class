<p class="loginAlert"><%=flash[:alert]%></p>
<p class="loginNotice"><%=flash[:notice]%></p>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{:class =>"panel-body wrapper-lg"}) do |f| %>
  <div class="form-group"><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true,:class=>"form-control input-lg" %></div>

  <div class="form-group"><%= f.label :password %><br />
  <%= f.password_field :password,:class=>"form-control input-lg" %></div>

  <% if devise_mapping.rememberable? -%>
    <!--<div class="form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>-->
  <% end -%>
     <a href="<%=url_for new_user_password_path%>" class="pull-right m-t-xs"><small>Forgot password</small></a>
  <div><%= f.submit "Sign in",:class=>"btn btn-primary" %></div>

<% end %>