<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class =>"panel-body wrapper-lg"}) do |f| %>
  <%#= devise_error_messages! %>
 <div class="form-group">
  <%= f.label :email, :class =>"control-label" %><br />
  <%= f.email_field :email, :autofocus => true,:class=>"form-control input-lg" %>
  <div style="color:red;"><%=resource.errors[:email][1] if !resource.errors.nil? && !resource.errors[:email].nil?%></div>
</div>

         
<div class="form-group">
  <%= f.label :first_name, :class =>"control-label" %><br />
  <%= f.text_field :first_name,:class=>"form-control input-lg" %>
     <div style="color:red;"><%=resource.errors[:first_name][0] if !resource.errors.nil? && !resource.errors[:first_name].nil?%></div>
</div>
<div class="form-group">
 <%= f.label :last_name, :class =>"control-label" %><br />
  <%= f.text_field :last_name,:class=>"form-control input-lg" %>
  <div style="color:red;"><%=resource.errors[:last_name][0] if !resource.errors.nil? && !resource.errors[:last_name].nil?%></div>
</div>
<div class="form-group">
<%= f.label :user_name, :class =>"control-label" %><br />
  <%= f.text_field :user_name,:class=>"form-control input-lg" %>
 <div style="color:red;"><%=resource.errors[:user_name][0] if !resource.errors.nil? && !resource.errors[:user_name].nil?%></div>
</div>
<div class="form-group">
  <%= f.label :password, :class =>"control-label" %><br />
  <%= f.password_field :password,:class=>"form-control input-lg" %>
 <div style="color:red;"><%=resource.errors[:password][1] if !resource.errors.nil? && !resource.errors[:password].nil?%></div>
</div>
<div class="form-group">
 <%= f.label :password_confirmation, :class =>"control-label" %><br />
  <%= f.password_field :password_confirmation,:class=>"form-control input-lg" %>
 <div style="color:red;"><%=resource.errors[:password_confirmation][0] if !resource.errors.nil? && !resource.errors[:password_confirmation].nil?%></div>
</div>
  <div><%= f.submit "Sign up",:class=>"btn btn-primary" %></div>
<% end %>

<%#= render "devise/shared/links" %>
